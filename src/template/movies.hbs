{{#each this}}
<li class="movies-list-item">
  <div class="wrap">
    {{#if poster_path}} <img class="list-item-img" src="https://image.tmdb.org/t/p/w300/{{poster_path}}" alt="Movie"
      data-id="{{id}}" />
    {{else}}
    <img class="list-item-img"
      src="https://motivatevalmorgan.com/wp-content/uploads/2016/06/default-movie-1-1-300x450.jpg" alt="Movie"
      data-id="{{id}}" />
    {{/if}}
  </div>
  <div class="list-item-container">
    <h2 class="list-item-title" data-id="{{id}}">{{title}}</h2>
    <p class="list-item-descr" data-id="{{id}}">{{genre_ids}} | {{release_date}} </p>
  </div>
  <p class="list-item-vote_average">{{vote_average}} </p>
</li>
{{/each}}