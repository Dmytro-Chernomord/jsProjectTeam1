{{#each this}}
<li class="movies-list-item">
    <img class="list-item-img" src="https://image.tmdb.org/t/p/w300/{{poster_path}}" alt="Movie" data-id="{{id}}" />
    <h2 class="list-item-title" data-id="{{id}}">{{title}}</h2>
    <p class="list-item-descr" data-id="{{id}}">{{genre_ids}} | <span>{{release_date}}</span></p>
</li>
{{/each}}