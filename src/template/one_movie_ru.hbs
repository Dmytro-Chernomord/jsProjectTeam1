{{#each this}}
<div class="card-box">
    <div class="box-image">
         {{#if poster_path}}<img class="one-movie-image" src="https://image.tmdb.org/t/p/w400/{{poster_path}}" alt="Poster">
         {{else}}
           <img class="list-item-img"
      src="https://motivatevalmorgan.com/wp-content/uploads/2016/06/default-movie-1-1-300x450.jpg" alt="Movie"
      data-id="{{id}}" />
    {{/if}}
    </div>
    <div class="box-content">
        <h2 class="content-title">{{title}}</h2>
        <ul class="content-list">
            <li class="content-item">
                <p class="item-part">Оценка / Голосов </p>
                <span class="item-data item-data--accent">{{vote_average}}</span><span> / </span>
                <span class="item-data item-data--accent item-data--grey">{{vote_count}}</span>
                {{!-- <p class="rating"></p> --}}
            </li>
            <li class="content-item">
                <p class="item-part">Рейтинг</p> <span class="item-data">{{popularity}}</span>

            </li>
            <li class="content-item">
                <p class="item-part">Оригинальное название</p> <span class="item-data">{{original_title}}</span>

            </li>
            <li class="content-item">
                <p class="item-part">Жанр
                <ul class="genre-list">
                    {{#each genres}}
                    <li class="item-data genre-data">{{this.name}}</li>
                    {{/each}}
                </ul>
                </p>
            </li>
        </ul>
        <h3 class="title-text">Описание</h3>
        <p class="text">{{overview}}</p>
        <div class="box-btn">
            <button id="add-watched" class="btn watch-btn" data-source='add-watched'>
                {{!-- <div class="spinner-border text-warning spinner" style="width: 20px; height: 20px" role="status">
                    <span class="sr-only">Загрузка...</span>
                </div> --}}
            </button>
            <button id="add-queue" class="btn queue-btn" data-source='add-queue'>
                {{!-- <div class="spinner-border text-warning spinner" style="width: 20px; height: 20px" role="status">
                    <span class="sr-only">Загрузка...</span>
                </div> --}}
            </button>
            <button id="trailer" data-id="{{id}}" class="btn trailer-btn" data-source='trailer'><svg class="youtube"
                    width="18" height="18"
                    style="shape-rendering:geometricPrecision; text-rendering:geometricPrecision; image-rendering:optimizeQuality; fill-rule:evenodd; clip-rule:evenodd"
                    version="1.1" viewBox="0 0 225 225" width="43.3492mm" xml:space="preserve"
                    xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <defs>
                        <style type="text/css">
                            .fil1 {
                                fill: #FEFEFE
                            }

                            .fil2 {
                                fill: #A01D1F
                            }

                            .fil0 {
                                fill: #C62326
                            }
                        </style>
                    </defs>
                    <g id="Layer_x0020_1">
                        <g id="_445042792">
                            <rect class="fil0" height="225" rx="24" ry="24" width="225" />
                            <polygon class="fil1" points="88,71 124,92 161,113 124,133 88,154 88,113 " />
                            <polygon class="fil2"
                                points="225,177 161,113 124,133 88,154 159,225 201,225 225,201 225,177 161,113 " />
                        </g>
                    </g>
                </svg>trailer</button>
        </div>
    </div>
</div>
{{/each}}